{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "strict": false,
    "target": "ES6", // Use "ES6" com letras maiúsculas
    "experimentalDecorators": true,
    "module": "commonjs", // Use "commonjs" com letras minúsculas
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      "ES5", // Use "ES5" com letras maiúsculas
      "ES6", // Use "ES6" com letras maiúsculas
      "DOM" // Use "DOM" com letras maiúsculas
    ]
  },
  "include": [
    "src/**/*.ts"
  ], // Adicione a configuração "include" para seus arquivos TypeScript
  "exclude": [
    "node_modules"
  ]
}